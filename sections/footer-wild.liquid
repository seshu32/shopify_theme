      } else if (icon === '💬') {
        alert('Opening WhatsApp chat! 💬');
      }
    });
  });
  
  // Footer links navigation
  const footerLinks = document.querySelectorAll('.links-list a[href^="#"]');
  footerLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const targetId = link.getAttribute('href').substring(1);
      const targetElement = document.getElementById(targetId);
      if (targetElement) {
        targetElement.scrollIntoView({ behavior: 'smooth' });
      }
    });
  });
  
  // Impact stats animation
  const impactItems = document.querySelectorAll('.impact-item');
  const impactObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.animation = 'none';
        setTimeout(() => {
          entry.target.style.animation = 'bounce 0.6s ease';
        }, Math.random() * 500);
      }
    });
  }, { threshold: 0.5 });
  
  impactItems.forEach(item => {
    impactObserver.observe(item);
  });
  
  // Certification badges hover animation
  const certBadges = document.querySelectorAll('.cert-badge');
  certBadges.forEach(badge => {
    badge.addEventListener('mouseenter', () => {
      badge.style.transform = 'translateY(-5px) scale(1.05)';
    });
    
    badge.addEventListener('mouseleave', () => {
      badge.style.transform = 'translateY(0) scale(1)';
    });
  });
  
  // Random floating element highlights
  setInterval(() => {
    const floatingElements = document.querySelectorAll('.floating-element');
    const randomElement = floatingElements[Math.floor(Math.random() * floatingElements.length)];
    if (randomElement) {
      randomElement.style.color = '#ffcf83';
      randomElement.style.transform = 'scale(1.3)';
      
      setTimeout(() => {
        randomElement.style.color = 'rgba(184, 220, 153, 0.4)';
        randomElement.style.transform = 'scale(1)';
      }, 2000);
    }
  }, 5000);
});

// CSS for bounce animation
