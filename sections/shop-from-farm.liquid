<script>
document.addEventListener('DOMContentLoaded', function() {
  // Farm marker interactions
  const farmMarkers = document.querySelectorAll('.farm-marker');
  const farmDetails = document.querySelectorAll('.farm-detail');
  
  farmMarkers.forEach(marker => {
    marker.addEventListener('click', () => {
      const farmId = marker.dataset.farm;
      
      // Update active marker
      farmMarkers.forEach(m => m.classList.remove('active'));
      marker.classList.add('active');
      
      // Update active farm detail
      farmDetails.forEach(detail => {
        detail.classList.remove('active');
        if (detail.dataset.farm === farmId) {
          detail.classList.add('active');
        }
      });
    });
    
    // Hover effects
    marker.addEventListener('mouseenter', () => {
      marker.style.filter = 'drop-shadow(0 0 15px rgba(52, 71, 54, 0.7))';
    });
    
    marker.addEventListener('mouseleave', () => {
      if (!marker.classList.contains('active')) {
        marker.style.filter = '';
      }
    });
  });
  
  // Map filter buttons
  const mapBtns = document.querySelectorAll('.map-btn');
  
  mapBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      
      // Update active button
      mapBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Filter farm markers (simplified - in real implementation, you'd have farm data)
