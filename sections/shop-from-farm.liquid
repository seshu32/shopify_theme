          const farmId = marker.dataset.farm;
          if (farmData[farmId] && farmData[farmId].includes(filter)) {
            marker.style.opacity = '1';
          } else {
            marker.style.opacity = '0.3';
          }
        }
      });
    });
  });
  
  // Shop buttons
