<script>
document.addEventListener('DOMContentLoaded', function() {
  // Auto-detect current season
  const currentMonth = new Date().getMonth();
  let currentSeason;
  
  if (currentMonth >= 2 && currentMonth <= 4) {
    currentSeason = 'spring';
  } else if (currentMonth >= 5 && currentMonth <= 7) {
    currentSeason = 'summer';
  } else if (currentMonth >= 8 && currentMonth <= 10) {
    currentSeason = 'monsoon';
  } else {
    currentSeason = 'winter';
  }
  
  // Update season indicator
  const seasonNames = {
    spring: 'Spring üå∏',
    summer: 'Summer ‚òÄÔ∏è',
    monsoon: 'Monsoon üåßÔ∏è',
    winter: 'Winter ‚ùÑÔ∏è'
  };
  
  document.getElementById('currentSeason').textContent = seasonNames[currentSeason];
  
  // Season navigation
  const seasonBtns = document.querySelectorAll('.season-btn');
  const seasonCards = document.querySelectorAll('.seasonal-card');
  
  seasonBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const season = btn.dataset.season;
      
      // Update active button
      seasonBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      // Show/hide relevant cards with animation
      seasonCards.forEach(card => {
        if (card.dataset.season === season) {
          card.style.display = 'block';
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 100);
        } else {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          setTimeout(() => {
            card.style.display = 'none';
          }, 300);
        }
      });
    });
  });
  
  // Set initial active season
  const currentSeasonBtn = document.querySelector(`[data-season="${currentSeason}"]`);
  if (currentSeasonBtn) {
    currentSeasonBtn.click();
  }
  
