{% comment %}
  Produce Story Section
{% endcomment %}

<section class="py-32 bg-white relative overflow-hidden">
  <!-- Modern Background Design -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-20 w-96 h-96 bg-green-100 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-yellow-100 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-green-50 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 relative">
    <!-- Enhanced Header Section -->
    <div class="max-w-4xl mx-auto text-center mb-20">
      <div class="inline-flex items-center bg-gradient-to-r from-green-50 to-yellow-50 rounded-full px-6 py-3 mb-6">
        <span class="mr-2 text-gray-600">üåø</span>
        <span class="text-gray-600 font-semibold text-sm tracking-wider uppercase">
          {{ section.settings.badge_text | default: "From Farm to Table Journey" }}
        </span>
      </div>
      
      <h2 class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent mb-6">
        {{ section.settings.main_title | default: "The Story of Our Produce" }}
      </h2>
      
      <p class="text-xl text-gray-700 leading-relaxed max-w-3xl mx-auto">
        {{ section.settings.main_description | default: "Every product has a story of care, tradition, and sustainability behind it. We work hand-in-hand with farmers who use time-tested techniques to nurture the land, ensuring nutrient-rich, chemical-free produce for your family." }}
      </p>
    </div>

    <!-- Modern Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 max-w-7xl mx-auto">
      {% for block in section.blocks %}
        <div class="group relative">
          <div class="relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden h-80 flex flex-col">
            <!-- Gradient Background -->
            <div class="absolute inset-0 bg-gradient-to-br from-green-100 to-yellow-100 opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
            
            <!-- Icon Container -->
            <div class="relative mb-6 flex-shrink-0">
              <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-green-500 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                <span class="text-3xl text-white">{{ block.settings.step_emoji | default: "üå±" }}</span>
              </div>
              
              <!-- Floating particles effect -->
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-green-400 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>

            <!-- Content -->
            <div class="relative z-10 flex-1 flex flex-col">
              <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-gray-600 transition-colors duration-300 line-clamp-2">
                {{ block.settings.step_title | default: "Our Process Step" }}
              </h3>
              <p class="text-gray-600 text-sm leading-relaxed flex-1">
                {{ block.settings.step_description | default: "Quality and care in every step of our farming process." }}
              </p>
            </div>

            <!-- Decorative Border -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-orange-400 to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          </div>
        </div>
      {% endfor %}
      
      {% if section.blocks.size == 0 %}
        <!-- Default story steps when no blocks are added -->
        {% assign default_steps = 'Seed Selection,Soil Preparation,Organic Planting,Natural Growth,Careful Harvesting,Quality Testing,Fresh Packaging,Quick Delivery' | split: ',' %}
        {% assign default_descriptions = 'We choose only the finest organic seeds,Preparing nutrient-rich soil naturally,Planting with sustainable methods,Growing without harmful chemicals,Hand-picked at perfect ripeness,Rigorous quality control checks,Eco-friendly packaging solutions,Fast delivery to maintain freshness' | split: ',' %}
        {% assign default_emojis = 'üå±,üåç,üöú,üåø,üë•,üî¨,üì¶,üöö' | split: ',' %}
        
        {% for step in default_steps %}
          <div class="group relative">
            <div class="relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden h-80 flex flex-col">
              <div class="absolute inset-0 bg-gradient-to-br from-green-100 to-yellow-100 opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
              
              <div class="relative mb-6 flex-shrink-0">
                <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-green-500 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                  <span class="text-3xl text-white">{{ default_emojis[forloop.index0] }}</span>
                </div>
                
                <div class="absolute -top-1 -right-1 w-3 h-3 bg-yellow-400 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-green-400 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              </div>

              <div class="relative z-10 flex-1 flex flex-col">
                <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-gray-600 transition-colors duration-300 line-clamp-2">
                  {{ step }}
                </h3>
                <p class="text-gray-600 text-sm leading-relaxed flex-1">
                  {{ default_descriptions[forloop.index0] }}
                </p>
              </div>

              <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-orange-400 to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    <!-- Call to Action Section -->
    {% if section.settings.cta_text %}
      <div class="text-center mt-20">
        <div class="max-w-3xl mx-auto">
          <p class="text-lg text-gray-600 mb-8">
            {{ section.settings.cta_description | default: "This journey ensures that every product you receive carries the essence of sustainable farming, ethical practices, and uncompromised quality." }}
          </p>
          <a href="{{ section.settings.cta_link | default: '/pages/about' }}" class="inline-block bg-gradient-to-r from-gray-700 to-gray-800 text-white px-8 py-4 rounded-full font-semibold text-lg hover:from-gray-800 hover:to-gray-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
            {{ section.settings.cta_text }}
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

