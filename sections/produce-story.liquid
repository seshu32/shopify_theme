{% comment %}
  Liquid section converted from ProduceStory.tsx
{% endcomment %}

<section class="py-32 bg-white relative overflow-hidden">
  <!-- Modern Background Design -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-[#b8dc99]/10 to-[#415c43]/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-20 w-80 h-80 bg-gradient-to-br from-[#ffcf83]/10 to-[#ff774a]/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-br from-[#b8dc99]/5 to-transparent rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 relative">
    <!-- Enhanced Header Section -->
    <div class="max-w-4xl mx-auto text-center mb-20">
      <div class="inline-flex items-center bg-gradient-to-r from-[#b8dc99]/20 to-[#ffcf83]/20 rounded-full px-6 py-3 mb-6">
        <!-- Using simple emoji instead of missing icon -->
        <span class="mr-2 text-[#415c43]">ðŸŒ¿</span>
        <span class="text-[#415c43] font-semibold text-sm tracking-wider uppercase">
          From Farm to Table Journey
        </span>
      </div>
      
      <h2 class="text-4xl md:text-6xl font-bold bg-gradient-to-r from-[#344736] to-[#415c43] bg-clip-text text-transparent mb-6">
        The Story of Our Produce
      </h2>
      
      <p class="text-xl text-[#4b3c35] leading-relaxed max-w-3xl mx-auto">
        Every product has a story of care, tradition, and sustainability behind it. 
        We work hand-in-hand with farmers who use time-tested techniques to nurture 
        the land, ensuring nutrient-rich, chemical-free produce for your family.
      </p>
    </div>

    <!-- Modern Grid Layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 max-w-7xl mx-auto">
      {% for step in storySteps %}
      <div class="group relative">
        <div class="relative bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden h-80 flex flex-col">
          <!-- Gradient Background -->
          <div class="absolute inset-0 bg-gradient-to-br {{ step.color }} opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
          
          <!-- Icon Container -->
          <div class="relative mb-6 flex-shrink-0">
            <div class="w-16 h-16 bg-gradient-to-br {{ step.color }} rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300">
              <img src="{{ step.icon | asset_url }}" class="w-8 h-8 text-white" alt="{{ step.title }} Icon" />
            </div>
            
            <!-- Floating particles effect -->
            <div class="absolute -top-1 -right-1 w-3 h-3 bg-[#ffcf83] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-[#b8dc99] rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>

          <!-- Content -->
          <div class="relative z-10 flex-1 flex flex-col">
            <h3 class="text-xl font-bold text-[#344736] mb-3 group-hover:text-[#415c43] transition-colors duration-300 line-clamp-2">
              {{ step.title }}
            </h3>
            <p class="text-[#4b3c35] text-sm leading-relaxed flex-1">
              {{ step.description }}
            </p>
          </div>

          <!-- Decorative Border -->
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[#ff774a]/20 to-transparent transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
        </div>
      </div>
      {% endfor %}
    </div>

    <!-- Call to Action Section -->
    <div class="text-center mt-20">
      <div class="max-w-3xl mx-auto">
        <p class="text-lg text-[#4b3c35] mb-8">
          This 12-step journey ensures that every product you receive carries the essence of 
          sustainable farming, ethical practices, and uncompromised quality.
        </p>
        <button 
          class="bg-gradient-to-r from-[#415c43] to-[#344736] text-white px-8 py-4 rounded-full font-semibold text-lg hover:from-[#344736] hover:to-[#415c43] transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
        >
          Learn More About Our Process
        </button>
      </div>
    </div>
  </div>
</section> 