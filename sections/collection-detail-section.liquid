{% comment %} Collection Detail Section {% endcomment %}
<div class="bg-white">
  <!-- Breadcrumb & Header -->
  <section class="pt-32 pb-8 bg-gradient-to-br from-[#ffcf83]/10 to-[#b8dc99]/10">
    <div class="container mx-auto px-6">
      <!-- Breadcrumb -->
      <div class="flex items-center text-sm text-[#4b3c35] mb-8">
        <a href="{{ '/' | link_to }}" class="hover:text-[#415c43] transition-colors">
          Home
        </a>
        <span class="mx-2">/</span>
        <a href="{{ '/collections' | link_to }}" class="hover:text-[#415c43] transition-colors">
          Collections
        </a>
        <span class="mx-2">/</span>
        <span class="text-[#415c43] font-medium">{{ collection.title }}</span>
      </div>

      <!-- Back Button -->
      <a href="{{ '/collections' | link_to }}" class="inline-flex items-center text-[#415c43] hover:text-[#344736] mb-6 transition-colors group">
        <span class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform">←</span>
        Back to Collections
      </a>

      <!-- Collection Header -->
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold text-[#344736] mb-4">
          {{ collection.title }}
        </h1>
        <p class="text-xl text-bewild-coral-orange mb-6 leading-relaxed">
          {{ collection.description }}
        </p>
        <p class="text-lg text-[#4b3c35] leading-relaxed">
          {{ collection.longDescription }}
        </p>
      </div>
    </div>
  </section>

  <!-- Filters & Sort -->
  <section class="py-8 border-b border-gray-200">
    <div class="container mx-auto px-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div class="flex items-center gap-4">
          <span class="text-[#4b3c35] font-medium">
            {{ collection.products.size }} Products
          </span>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-16">
    <div class="container mx-auto px-6">
      <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {% for product in collection.products %}
        <div class="group">
          <a href="{{ '/product/' | append: product.handle | link_to }}">
            <div class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden">
              <!-- Product Image -->
              <div class="relative h-64 overflow-hidden">
                <img src="{{ product.image | asset_url }}" alt="{{ product.name }}" class="object-cover group-hover:scale-110 transition-transform duration-500" />
                <div class="absolute top-4 right-4">
                  <div class="bg-[#ff774a] text-white px-3 py-1 rounded-full text-sm font-semibold">
                    {{ product.discount }}% OFF
                  </div>
                </div>
              </div>

              <!-- Product Info -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-[#344736] mb-2 group-hover:text-[#415c43] transition-colors">
                  {{ product.name }}
                </h3>
                <p class="text-[#ff774a] font-medium mb-3">{{ product.subtitle }}</p>
                <p class="text-[#4b3c35] text-sm mb-4 line-clamp-2">{{ product.description }}</p>

                <!-- Benefits -->
                <div class="mb-4">
                  <div class="flex flex-wrap gap-2">
                    {% for benefit in product.benefits limit:2 %}
                    <span class="bg-[#b8dc99]/20 text-[#415c43] px-2 py-1 rounded-full text-xs font-medium">
                      {{ benefit }}
                    </span>
                    {% endfor %}
                  </div>
                </div>

                <!-- Price -->
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2">
                    <span class="text-2xl font-bold text-[#344736]">₹{{ product.price }}</span>
                    <span class="text-lg text-gray-500 line-through">₹{{ product.originalPrice }}</span>
                  </div>
                  <button class="bg-[#ff774a] text-white p-2 rounded-full hover:bg-[#86312b] transition-colors">
                    Add to Cart
                  </button>
                </div>
              </div>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <!-- Related Collections -->
  <section class="py-16 bg-[#ffcf83]/5">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-[#344736] mb-4">
          Explore Other Collections
        </h2>
        <p class="text-xl text-[#4b3c35]">
          Discover more of our organic and sustainable products
        </p>
      </div>

      <div class="flex justify-center">
        <a href="{{ '/collections' | link_to }}" class="bg-[#415c43] text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-[#344736] transition-all duration-300 transform hover:scale-105 shadow-lg">
          View All Collections
        </a>
      </div>
    </div>
  </section>
</div> 