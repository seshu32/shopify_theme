<section class="relative h-screen overflow-hidden bg-gray-900">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    {% if section.settings.hero_image %}
      <img src="{{ section.settings.hero_image | image_url: width: 1920 }}" alt="{{ section.settings.hero_title }}" class="w-full h-full object-cover">
    {% else %}
      <div class="w-full h-full bg-gradient-to-br from-green-800 to-green-600"></div>
    {% endif %}
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/40"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 h-full flex items-center">
    <div class="container mx-auto px-8 lg:px-16">
      <div class="grid lg:grid-cols-2 gap-20 items-center h-full">
        <!-- Left: Content -->
        <div class="space-y-8">
          {% if section.settings.hero_badge %}
            <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-xl border border-white/20 rounded-full px-4 py-2">
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <span class="text-white/70 text-xs tracking-wide uppercase">
                {{ section.settings.hero_badge }}
              </span>
            </div>
          {% endif %}
          
          <div class="space-y-6">
            <h1 class="text-5xl lg:text-6xl xl:text-7xl leading-tight text-white font-bold">
              {{ section.settings.hero_title | default: "Welcome to Our Organic Farm" }}
            </h1>
            <div class="h-0.5 bg-green-400 rounded-full max-w-md"></div>
            <p class="text-lg lg:text-xl text-white/80 leading-relaxed max-w-2xl">
              {{ section.settings.hero_subtitle | default: "Experience the finest organic produce, grown with care and harvested with love. From farm to table, we bring you nature's best." }}
            </p>
          </div>
          
          {% if section.settings.hero_button_text %}
            <a href="{{ section.settings.hero_button_link | default: '/collections' }}" class="inline-block bg-gradient-to-r from-orange-400 via-orange-500 to-orange-400 text-white px-10 py-5 rounded-full font-bold text-lg tracking-wide shadow-2xl hover:shadow-orange-400/40 transition-all duration-500">
              {{ section.settings.hero_button_text }}
              <span class="inline-block ml-2">â†’</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Background Image"
    },
    {
      "type": "text",
      "id": "hero_badge",
      "label": "Hero Badge Text",
      "default": "Premium Organic Products"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Welcome to Our Organic Farm"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Experience the finest organic produce, grown with care and harvested with love. From farm to table, we bring you nature's best."
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link",
      "default": "/collections"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %} 