<script>
document.addEventListener('DOMContentLoaded', function() {
  // Intersection Observer for step animations
  const steps = document.querySelectorAll('.technique-step');
  
  const stepObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
        
        // Trigger step animation
        const stepAnimation = entry.target.querySelector('.step-animation');
        if (stepAnimation) {
          stepAnimation.style.opacity = '1';
          setTimeout(() => {
            stepAnimation.style.opacity = '0';
          }, 3000);
        }
      }
    });
  }, { threshold: 0.3 });
  
  steps.forEach(step => {
    step.style.opacity = '0';
    step.style.transform = 'translateY(50px)';
    step.style.transition = 'all 0.6s ease';
    stepObserver.observe(step);
  });
  
  // Action button handlers
  const actionBtns = document.querySelectorAll('.action-btn');
  actionBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const text = btn.textContent;
      if (text.includes('Farm Visit')) {
        alert('Booking your wild farm adventure! 🚶‍♀️🌿');
      } else if (text.includes('Guide')) {
        alert('Downloading the Farming Techniques Guide! 📖');
      } else if (text.includes('Videos')) {
        alert('Opening video library! 🎥');
      }
    });
  });
  
  // Auto-cycle through step animations
  let currentStep = 0;
  setInterval(() => {
    const allSteps = document.querySelectorAll('.technique-step');
    if (allSteps.length > 0) {
      const stepAnimation = allSteps[currentStep].querySelector('.step-animation');
      if (stepAnimation) {
        stepAnimation.style.opacity = '1';
        setTimeout(() => {
          stepAnimation.style.opacity = '0';
        }, 2000);
      }
      currentStep = (currentStep + 1) % allSteps.length;
    }
  }, 4000);
});
