{% comment %} Blog Section {% endcomment %}
<section class="py-32 bg-[#ffcf83]/5">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="flex justify-between items-end mb-16">
      <h2 class="text-[55px] leading-[1.2] font-bold text-[#344736]">
        Our Latest News
      </h2>
      <div>
        <a href="{{ '/blogs' | link_to }}" class="inline-block px-8 py-3 bg-[#ff774a] text-white rounded-lg font-medium hover:bg-[#9e3430] transition-colors shadow-lg hover:shadow-xl">
          More Blogs
        </a>
      </div>
    </div>

    <!-- Blog Grid -->
    <div class="grid lg:grid-cols-3 gap-8">
      <!-- Left Column - Large Horizontal Cards -->
      <div class="lg:col-span-2 grid grid-rows-2 gap-8">
        {% for blog in blogs limit:2 %}
        <div class="h-full">
          <div class="group h-full">
            <div class="bg-[#ffcf83]/10 rounded-3xl p-6 h-full border border-[#ffcf83]/20">
              <div class="flex gap-6 h-full items-center">
                <div class="relative w-[280px] aspect-[4/3] rounded-2xl overflow-hidden flex-shrink-0">
                  <img src="{{ blog.image | asset_url }}" alt="{{ blog.title }}" class="object-cover transition-transform duration-500 group-hover:scale-105" />
                </div>
                <div class="flex-1">
                  <div class="mb-3">
                    <span class="inline-block px-4 py-1.5 bg-[#ff774a] text-white text-sm font-medium rounded-lg">
                      {{ blog.category }}
                    </span>
                  </div>
                  <h3 class="text-2xl font-bold text-[#344736] mb-3 group-hover:text-[#415c43] transition-colors">
                    {{ blog.title }}
                  </h3>
                  <p class="text-[#4b3c35] leading-relaxed mb-4">
                    {{ blog.excerpt }}
                  </p>
                  <div class="flex items-center gap-6 text-sm text-[#4b3c35]/70">
                    <div class="flex items-center gap-2">
                      <span>By {{ blog.author }}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span>{{ blog.date }}</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>

      <!-- Right Column - Small Vertical Cards -->
      <div class="h-full grid grid-rows-2 gap-8">
        {% for blog in blogs offset:2 %}
        <div class="h-full">
          <div class="group h-full">
            <div class="bg-[#b8dc99]/10 rounded-3xl p-6 h-full flex flex-col border border-[#b8dc99]/20">
              <div class="relative aspect-[16/10] rounded-2xl overflow-hidden mb-8">
                <img src="{{ blog.image | asset_url }}" alt="{{ blog.title }}" class="object-cover transition-transform duration-500 group-hover:scale-105" />
                <div class="absolute top-4 left-4">
                  <span class="inline-block px-3 py-1 bg-[#ff774a] text-white text-sm font-medium rounded-lg">
                    {{ blog.category }}
                  </span>
                </div>
              </div>
              <div class="flex-1 flex flex-col justify-between">
                <div>
                  <h3 class="text-lg font-bold text-[#344736] mb-3 group-hover:text-[#415c43] transition-colors line-clamp-2">
                    {{ blog.title }}
                  </h3>
                  <p class="text-[#4b3c35] text-sm line-clamp-2 mb-4">
                    {{ blog.excerpt }}
                  </p>
                </div>
                <div class="flex items-center gap-4 text-sm text-[#4b3c35]/70">
                  <div class="flex items-center gap-1">
                    <span>By {{ blog.author }}</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <span>{{ blog.date }}</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section> 