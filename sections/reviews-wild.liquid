    card.addEventListener('click', () => {
      const reviewerName = card.querySelector('.reviewer-name').textContent;
      const productName = card.querySelector('.product-badge').textContent;
      alert(`Reading full review by ${reviewerName} for ${productName}! 📖`);
    });
    
    // Hover effects for nature elements
    card.addEventListener('mouseenter', () => {
      const elements = card.querySelectorAll('.element');
      elements.forEach(element => {
        element.style.opacity = '0.6';
        element.style.animation = 'nature-float 2s infinite';
      });
    });
    
    card.addEventListener('mouseleave', () => {
      const elements = card.querySelectorAll('.element');
      elements.forEach(element => {
        element.style.opacity = '0.3';
        element.style.animation = 'nature-float 6s infinite';
      });
    });
  });
  
  // CTA button handlers
  const ctaBtns = document.querySelectorAll('.cta-btn');
  ctaBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const text = btn.textContent;
      if (text.includes('Write')) {
        alert('Opening review form! ✍️');
      } else if (text.includes('Photos')) {
        alert('Upload your beautiful wild food photos! 📸');
      } else if (text.includes('Rate')) {
        alert('Rate your favorite products! ⭐');
      }
    });
  });
  
  // Intersection Observer for animations
  const cardObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0) scale(1)';
        
        // Animate critter
        const critter = entry.target.querySelector('.review-critter');
        if (critter) {
          critter.style.animation = 'critter-dance 2s ease';
        }
      }
    });
  }, { threshold: 0.2 });
  
  reviewCards.forEach(card => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px) scale(0.95)';
    card.style.transition = 'all 0.6s ease';
    cardObserver.observe(card);
  });
  
  // Random critter animations
  setInterval(() => {
    const critters = document.querySelectorAll('.review-critter');
    const randomCritter = critters[Math.floor(Math.random() * critters.length)];
    if (randomCritter) {
      randomCritter.style.animation = 'none';
      setTimeout(() => {
        randomCritter.style.animation = 'critter-dance 2s ease';
      }, 100);
    }
  }, 8000);
});
</script> 