<script>
document.addEventListener('DOMContentLoaded', function() {
  // Instagram post interactions
  const instagramPosts = document.querySelectorAll('.instagram-post');
  
  instagramPosts.forEach(post => {
    post.addEventListener('click', () => {
      const caption = post.querySelector('.post-caption').textContent;
      alert(`Opening Instagram post: "${caption.substring(0, 50)}..."`);
    });
  });
  
  // CTA button handlers
  const ctaBtns = document.querySelectorAll('.cta-btn');
  ctaBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const text = btn.textContent;
      if (text.includes('Follow')) {
        window.open('https://instagram.com/bewild.life', '_blank');
      } else if (text.includes('Use #')) {
        alert('Start using #WildFoodJourney in your posts! ğŸ“±');
      } else if (text.includes('Share')) {
        alert('Share your wild food story with us! ğŸ“¤');
      }
    });
  });
  
  // Hashtag interactions
  const hashtags = document.querySelectorAll('.hashtag');
  hashtags.forEach(hashtag => {
    hashtag.addEventListener('click', () => {
      const tag = hashtag.textContent;
      alert(`Searching for posts with ${tag}! ğŸ”`);
    });
  });
  

  
  // Intersection Observer for animations
  const postObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0) scale(1)';
      }
    });
  }, { threshold: 0.2 });
  
  // Animate Instagram posts
  instagramPosts.forEach((post, index) => {
    post.style.opacity = '0';
    post.style.transform = 'translateY(30px) scale(0.95)';
    post.style.transition = `all 0.6s ease ${index * 0.1}s`;
    postObserver.observe(post);
  });
  
  // Animate category cards
  const categoryCards = document.querySelectorAll('.category-card');
  categoryCards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    card.style.transition = `all 0.5s ease ${index * 0.1}s`;
    postObserver.observe(card);
  });
  

  
  // Random hashtag highlight
  setInterval(() => {
    const randomHashtag = hashtags[Math.floor(Math.random() * hashtags.length)];
    if (randomHashtag) {
      randomHashtag.style.background = '#b8dc99';
      randomHashtag.style.transform = 'scale(1.05)';
      
      setTimeout(() => {
        randomHashtag.style.background = 'rgba(184, 220, 153, 0.2)';
        randomHashtag.style.transform = 'scale(1)';
      }, 2000);
    }
  }, 10000);
});
