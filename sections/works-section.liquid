<section class="pt-32 pb-16 bg-white">
  <div class="container mx-auto px-6">
    <!-- Section Title -->
    <h2 class="text-5xl font-bold text-[#344736] text-center mb-12">
      Our Top-notch works
    </h2>

    <!-- Works Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-10">
      <!-- First Column -->
      <div class="space-y-6">
        {% for work in works %}
          {% if work.size == 'small' %}
            <div class="group relative rounded-3xl overflow-hidden h-[300px]">
              <!-- Image -->
              <div class="absolute inset-0">
                <img
                  src="{{ work.image | asset_url }}"
                  alt="{{ work.title }}"
                  class="object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors"></div>
              </div>

              <!-- Content -->
              <div class="relative h-full p-8 flex flex-col">
                <div class="mt-auto">
                  <h3 class="text-2xl font-bold text-white mb-2">{{ work.title }}</h3>
                  <span class="text-white/90">{{ work.subtitle }}</span>
                </div>

                <!-- Arrow Icon -->
                <div class="absolute top-6 right-6">
                  <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center transform translate-x-2 translate-y-2 opacity-0 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <span class="icon-arrow-up-right w-5 h-5 text-white"></span>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Second Column -->
      <div class="space-y-6">
        {% for work in works %}
          {% if work.size == 'small' %}
            <div class="group relative rounded-3xl overflow-hidden h-[300px]">
              <!-- Image -->
              <div class="absolute inset-0">
                <img
                  src="{{ work.image | asset_url }}"
                  alt="{{ work.title }}"
                  class="object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors"></div>
              </div>

              <!-- Content -->
              <div class="relative h-full p-8 flex flex-col">
                <div class="mt-auto">
                  <h3 class="text-2xl font-bold text-white mb-2">{{ work.title }}</h3>
                  <span class="text-white/90">{{ work.subtitle }}</span>
                </div>

                <!-- Arrow Icon -->
                <div class="absolute top-6 right-6">
                  <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center transform translate-x-2 translate-y-2 opacity-0 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <span class="icon-arrow-up-right w-5 h-5 text-white"></span>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Third Column - Large Card -->
      <div class="lg:col-span-1 md:col-span-2">
        {% for work in works %}
          {% if work.size == 'large' %}
            <div class="group relative rounded-3xl overflow-hidden h-[600px]">
              <!-- Image -->
              <div class="absolute inset-0">
                <img
                  src="{{ work.image | asset_url }}"
                  alt="{{ work.title }}"
                  class="object-cover transition-transform duration-500 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors"></div>
              </div>

              <!-- Content -->
              <div class="relative h-full p-8 flex flex-col">
                <div class="mt-auto">
                  <h3 class="text-4xl font-bold text-white mb-4">{{ work.title }}</h3>
                  <div class="flex items-center gap-2 mb-4">
                    <div class="w-5 h-5 rounded-full bg-white/20 flex items-center justify-center">
                      <span class="icon-check w-3 h-3 text-white"></span>
                    </div>
                    <span class="text-white/90 font-medium">{{ work.subtitle }}</span>
                  </div>
                  <p class="text-white/90 max-w-lg">{{ work.description }}</p>
                </div>

                <!-- Arrow Icon -->
                <div class="absolute top-6 right-6">
                  <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center transform translate-x-2 translate-y-2 opacity-0 group-hover:translate-x-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                    <span class="icon-arrow-up-right w-5 h-5 text-white"></span>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- More Work Button -->
    <div class="flex justify-center">
      <button class="bg-[#ff774a] text-white px-8 py-3 rounded-lg font-medium hover:bg-[#9e3430] transition-colors shadow-lg hover:shadow-xl">
        More Work
      </button>
    </div>
  </div>
</section> 