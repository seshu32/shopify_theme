{% comment %} Conference Section {% endcomment %}
<section class="py-32 relative overflow-hidden bg-white">
  <!-- Background Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute w-[800px] h-[800px] -top-[400px] -right-[400px] bg-[#b8dc99]/10 rounded-full blur-[100px]"></div>
    <div class="absolute w-[600px] h-[600px] -bottom-[300px] -left-[300px] bg-[#ffcf83]/10 rounded-full blur-[80px]"></div>
  </div>

  <div class="container mx-auto px-6 relative">
    <!-- Main Content Container -->
    <div class="max-w-7xl mx-auto">
      <!-- Title with Coffee Bean Icon -->
      <div class="flex flex-col items-center mb-20">
        <div class="w-20 h-20 bg-[#ff774a]/10 rounded-full flex items-center justify-center mb-6">
          <span class="w-10 h-10 text-[#ff774a]">☕</span>
        </div>
        <div class="text-center">
          <h2 class="text-6xl font-bold text-[#344736] mb-4">
            Our time at the
          </h2>
          <div class="relative inline-block">
            <h3 class="text-4xl font-bold text-[#415c43] relative z-10">
              World Coffee Conference 2023
            </h3>
          </div>
          <div class="w-24 h-1 bg-gradient-to-r from-[#ff774a] to-[#ffcf83] mx-auto mt-6"></div>
        </div>
      </div>

      <!-- Content Grid -->
      <div class="grid lg:grid-cols-12 gap-8">
        <!-- Large Image Column -->
        <div class="lg:col-span-7 relative group">
          <div class="relative aspect-[16/10] rounded-3xl overflow-hidden shadow-2xl">
            {% for image in conferenceImages %}
            <div class="absolute inset-0">
              <img src="{{ image.src | asset_url }}" alt="{{ image.caption }}" class="object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
            </div>
            {% endfor %}

            <!-- Image Caption -->
            <div class="absolute bottom-6 left-6 right-6 text-white">
              <div class="flex items-center gap-2 mb-2">
                <span class="w-5 h-5 text-[#ff774a]">★</span>
                <span class="text-sm font-medium text-[#ff774a]">HIGHLIGHTS</span>
              </div>
              <p class="text-lg font-medium">
                {{ conferenceImages[0].caption }}
              </p>
            </div>
          </div>
        </div>

        <!-- Testimonials Column -->
        <div class="lg:col-span-5 space-y-6">
          {% for testimonial in testimonials %}
          <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-full bg-[#ff774a]/10 flex items-center justify-center flex-shrink-0">
                <span class="w-6 h-6 text-[#ff774a]">★</span>
              </div>
              <div>
                <p class="text-lg text-[#344736] font-medium mb-4">
                  {{ testimonial.quote }}
                </p>
                <div class="mb-4">
                  <h4 class="text-[#344736] font-semibold">
                    {{ testimonial.author }}
                  </h4>
                  <p class="text-[#415c43] text-sm">
                    {{ testimonial.role }}
                  </p>
                </div>
                <a href="{{ testimonial.link.href | link_to }}" class="inline-flex items-center gap-2 text-[#4b3c35] hover:text-[#ff774a] transition-colors group">
                  <span class="text-sm">{{ testimonial.link.text }}</span>
                  <span class="w-4 h-4 transform group-hover:translate-x-1 transition-transform">→</span>
                </a>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section> 