{% comment %}
Collections Section - Showcase curated product collections
{% endcomment %}

<section class="collections-section">
  <div class="container">
    <div class="collections-header">
      <span class="tagline">{{ section.settings.tagline | default: 'FROM HARVEST TO TABLE' }}</span>
      <h2>
        {{ section.settings.title_part1 | default: 'Explore Our' }}
        <span class="highlight">{{ section.settings.title_part2 | default: 'Wild Collections' }}</span>
      </h2>
      <p class="description">{{ section.settings.description | default: 'From thoughtful gifts and artisan treats to the essence of our growing seasons, find unforgettable treats to your family table.' }}</p>
    </div>

    {% if collections.size > 0 %}
      <div class="collections-grid">
        {% assign max_collections = section.settings.max_collections | default: 6 %}
        {% for collection in collections limit: max_collections %}
          <div class="collection-card">
            {% if collection.featured_image %}
              <div class="collection-image">
                <img src="{{ collection.featured_image | img_url: '300x300' }}" alt="{{ collection.title }}" loading="lazy">
              </div>
            {% else %}
              <div class="collection-image placeholder">
                {% case forloop.index %}
                  {% when 1 %}ü•¨
                  {% when 2 %}üåæ
                  {% when 3 %}üçÖ
                  {% when 4 %}ü•ï
                  {% when 5 %}üåø
                  {% when 6 %}üçä
                  {% else %}üå±
                {% endcase %}
              </div>
            {% endif %}
            <div class="collection-info">
              <h3>{{ collection.title }}</h3>
              {% if collection.description != blank %}
                <p>{{ collection.description | truncate: 100 }}</p>
              {% endif %}
              <a href="{{ collection.url }}" class="btn btn-outline">Explore Collection</a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <!-- Fallback collections when no collections exist -->
      <div class="collections-grid">
        {% for block in section.blocks %}
          <div class="collection-card">
            {% if block.settings.image %}
              <div class="collection-image">
                <img src="{{ block.settings.image | img_url: '300x300' }}" alt="{{ block.settings.title }}" loading="lazy">
              </div>
            {% else %}
              <div class="collection-image placeholder">
                {{ block.settings.emoji | default: 'üå±' }}
              </div>
            {% endif %}
            <div class="collection-info">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.description }}</p>
              <a href="{{ block.settings.link | default: '#' }}" class="btn btn-outline">{{ block.settings.button_text | default: 'Explore Collection' }}</a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.show_story_section %}
      <div class="collection-story">
        <h3>{{ section.settings.story_title | default: 'Every Collection Has a Story' }}</h3>
        <p>{{ section.settings.story_description | default: 'From our farm to your table, each product carries the dedication of our sustainable farming practices and the passion for genuine, farm-fresh flavors that you can taste throughout the land.' }}</p>
        {% if section.settings.story_button_text != blank %}
          <a href="{{ section.settings.story_button_link | default: '#' }}" class="btn btn-secondary">{{ section.settings.story_button_text }}</a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

<style>
  .collections-section .tagline {
    display: block;
    font-size: 0.9rem;
    font-weight: bold;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--color-light-yellow);
    margin-bottom: 0.5rem;
  }

  .collections-section .description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  .collection-card .collection-image {
    height: 200px;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-card .collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-card:hover .collection-image img {
    transform: scale(1.05);
  }

  .collection-card .collection-image.placeholder {
    font-size: 4rem;
    background: linear-gradient(135deg, var(--color-light-green), var(--color-light-yellow));
  }

  .collection-card .collection-info h3 {
    font-size: 1.3rem;
    margin-bottom: 0.8rem;
    color: var(--color-text-light);
  }

  .collection-card .collection-info p {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .collection-card .btn-outline {
    color: var(--color-light-yellow);
    border-color: var(--color-light-yellow);
    font-size: 0.9rem;
    padding: 10px 20px;
  }

  .collection-card .btn-outline:hover {
    background-color: var(--color-light-yellow);
    color: var(--color-dark-green);
  }

  @media (max-width: 768px) {
    .collections-header h2 {
      font-size: 2rem;
    }
    
    .collections-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
    }
    
    .collection-card .collection-image {
      height: 150px;
    }
  }
</style>

