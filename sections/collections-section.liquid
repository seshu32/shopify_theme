<section class="py-32 bg-gradient-to-br from-[#344736] via-[#415c43] to-[#b8dc99]/30 relative overflow-hidden">
  <!-- Subtle Background Decorative Elements -->
  <div class="absolute top-20 right-10 w-32 h-32 bg-[#ffcf83]/12 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 left-10 w-40 h-40 bg-[#ff774a]/8 rounded-full blur-3xl"></div>
  <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-[#b8dc99]/15 rounded-full blur-2xl"></div>
  <div class="absolute top-1/4 right-1/4 w-20 h-20 bg-[#342e29]/10 rounded-full blur-xl"></div>
  
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <!-- Badge -->
      <div class="inline-flex items-center px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full mb-8">
        <span class="text-white font-medium text-sm tracking-wide drop-shadow-sm">
          ðŸŒ¿ FROM FOREST TO TABLE
        </span>
      </div>

      <!-- Main Heading -->
      <h2 class="text-5xl md:text-7xl font-light text-white mb-6 tracking-tight drop-shadow-lg">
        Explore Our
        <span class="block font-normal text-[#ffcf83] relative">
          Wild Collections
          <svg class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-32 h-3 text-[#ff774a]/60" viewBox="0 0 120 12" fill="none">
            <path d="M2 10C20 4 40 2 60 6C80 10 100 8 118 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </span>
      </h2>
      
      <p class="text-xl text-white/90 max-w-2xl mx-auto leading-relaxed drop-shadow-md">
        Five thoughtfully curated collections, each telling the story of our journey 
        from sustainable forests to your family table.
      </p>
    </div>

    <!-- Collections Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 lg:gap-8">
      {% for collection in collections %}
        <div class="group relative">
          <a href="/collections/{{ collection.id }}" class="block">
            <!-- Card Container -->
            <div 
              class="relative overflow-hidden bg-white/95 backdrop-blur-sm rounded-3xl p-6 group-hover:shadow-2xl transition-all duration-500 group-hover:scale-105 border-2"
              style="border-color: {{ collection.borderColor }}30;"
            >
              <!-- Top Accent Bar -->
              <div 
                class="absolute top-0 left-0 right-0 h-1 rounded-t-3xl"
                style="background-color: {{ collection.accent }};"
              ></div>

              <!-- Product Count Badge -->
              <div class="absolute top-4 right-4 z-10">
                <div 
                  class="backdrop-blur-sm rounded-full px-3 py-1 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0"
                  style="background-color: {{ collection.accent }}20;"
                >
                  <span 
                    class="text-xs font-medium"
                    style="color: {{ collection.accent }};"
                  >
                    {{ collection.productCount }} items
                  </span>
                </div>
              </div>
              
              <!-- Product Image -->
              <div class="relative mb-6 aspect-square bg-gray-50 rounded-2xl p-4 shadow-sm overflow-hidden">
                <img 
                  src="{{ collection.heroImage | asset_url }}" 
                  alt="{{ collection.title }}"
                  class="w-full h-full object-cover rounded-xl group-hover:scale-110 transition-transform duration-700"
                />
                
                <!-- Hover Overlay -->
                <div 
                  class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"
                  style="background: linear-gradient(to top, {{ collection.accent }}20, transparent);"
                ></div>
              </div>

              <!-- Content -->
              <div class="text-center">
                <!-- Subtitle -->
                <p 
                  class="text-xs font-medium tracking-wide uppercase mb-2 opacity-60 group-hover:opacity-100 transition-opacity duration-300"
                  style="color: {{ collection.accent }};"
                >
                  {{ collection.subtitle }}
                </p>
                
                <!-- Title -->
                <h3 class="text-lg font-semibold text-[#2D3748] group-hover:text-[#1A202C] transition-colors duration-300 mb-3">
                  {{ collection.title }}
                </h3>

                <!-- Decorative Line -->
                <div class="flex justify-center">
                  <div 
                    class="h-px transition-all duration-300 group-hover:w-16"
                    style="width: 32px; background-color: {{ collection.accent }};"
                  ></div>
                </div>
              </div>

              <!-- Corner Accent -->
              <div 
                class="absolute bottom-0 right-0 w-16 h-16 rounded-full transform translate-x-8 translate-y-8 group-hover:scale-150 transition-transform duration-500"
                style="background-color: {{ collection.accent }}05;"
              ></div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    <!-- Bottom Story Section -->
    <div class="mt-24 text-center">
      <div 
        class="rounded-3xl p-12 border backdrop-blur-sm"
        style="background-color: rgba(255, 255, 255, 0.15); border-color: rgba(255, 255, 255, 0.2);"
      >
        <h3 class="text-2xl font-light text-white mb-4 drop-shadow-md">
          Every Collection Has a Story
        </h3>
        <p class="text-white/90 mb-8 max-w-2xl mx-auto leading-relaxed drop-shadow-sm">
          From the forest floor to your kitchen, each product carries the essence of our sustainable farming practices 
          and the wisdom of generations who understood that the best food comes from respecting the land.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button 
            class="group px-8 py-4 text-white rounded-full font-medium hover:shadow-xl transition-all duration-300 flex items-center gap-2"
            style="background: linear-gradient(to right, #344736, #415c43); box-shadow: 0 0 0 0 transparent;"
          >
            Learn More
          </button>
        </div>
      </div>
    </div>
  </div>
</section> 